<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="asciiPanel8x8" class="asciiPanel.AsciiPanel">
        <property name="asciiFont" ref="asciiFont8x8"/>
    </bean>

    <bean id="asciiFont8x8" class="asciiPanel.AsciiFont">
        <constructor-arg index="0" value="cp437_8x8.png"/>
        <constructor-arg index="1" value="8"/>
        <constructor-arg index="2" value="8"/>
    </bean>

    <bean id="asciiPanel9x16" class="asciiPanel.AsciiPanel">
        <property name="asciiFont" ref="asciiFont9x16"/>
    </bean>

    <bean id="asciiFont9x16" class="asciiPanel.AsciiFont">
        <constructor-arg index="0" value="cp437_9x16.png"/>
        <constructor-arg index="1" value="9"/>
        <constructor-arg index="2" value="16"/>
    </bean>

</beans>